# Required variables
primary_region        = "eu-west-1" # Your primary region
dr_region             = "us-west-2" # Your DR region
project_name          = "pilot-light-dr"
environment           = "prod"

# Network configuration
vpc_cidr_primary      = "10.0.0.0/16"
vpc_cidr_dr           = "10.1.0.0/16"

# Instance types
db_instance_class     = "db.t3.medium"
ec2_instance_type     = "t3.medium"

# REQUIRED: AMI IDs - you must provide valid AMI IDs for both regions
# Amazon Linux 2 AMI IDs (example - replace with current AMIs)
primary_ami_id        = "ami-0a49b025fffbbdac6" # Amazon Linux 2 in eu-west-1
dr_ami_id             = "ami-0721c9af7b9b75114" # Amazon Linux 2 in us-west-2

# Optional: SSL Certificates
# Leave empty for initial deployment, add later for HTTPS
primary_certificate_arn = ""
dr_certificate_arn      = ""

# Optional: SSH key
# ssh_public_key        = "ssh-rsa AAAA..."

# Database configuration
db_name               = "django_db"
db_secret_arn         = "arn:aws:secretsmanager:eu-west-1:your-account-id:secret:your-secret-name" # Replace with your actual secret ARN

# Domain configuration (optional for initial deployment)
domain_name           = "example.com" # Your domain name
create_route53_records = false # Set to true when you're ready to configure DNS